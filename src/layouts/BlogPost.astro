---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
  };
}

const {
  content: { title, pubDate },
} = Astro.props;
---

<BaseLayout>
  <article>
    <h1 class="text-3xl font-bold dark:text-slate-200 mb-2">{title}</h1>
    {
      pubDate && (
        <time class="text-gray-500">
          {new Date(pubDate).toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
          })}
        </time>
      )
    }
    <div class="mt-9">
      <slot />
    </div>
  </article>
</BaseLayout>

<style lang="css" is:global>
  article p {
    @apply dark:text-slate-200 mb-5 mt-5 text-justify;
  }
  article h2 {
    @apply text-2xl font-bold dark:text-slate-200 mb-5;
  }
  article pre.astro-code {
    @apply p-3 rounded-lg;
  }
  article p > code {
    @apply inline px-1 rounded-md no-underline dark:text-slate-200 bg-card dark:bg-card-dark  py-px;
  }
</style>
